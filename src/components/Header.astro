<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuTextItems = document.querySelectorAll('.menu-item');
    const svgElement = document.querySelector('.rotating-svg');

    // Function to rotate the SVG
    let currentRotation = 0;
    const rotateSvg = (element) => {
      currentRotation += 180; // Increment the rotation by 180 degrees
      element.style.transform = `rotate(${currentRotation}deg)`;
      element.style.transition = 'transform 0.5s ease'; // Smooth rotation
    };

    menuTextItems.forEach((menuText) => {
      menuText.addEventListener('mouseenter', () => {
        rotateSvg(svgElement);
        if (menuText.classList.contains('experience')) {
          svgElement.querySelector('path').style.fill = 'var(--c-blue)';
        } else if (menuText.classList.contains('education')) {
          svgElement.querySelector('path').style.fill = 'var(--c-green)';
        } else if (menuText.classList.contains('skills')) {
          svgElement.querySelector('path').style.fill = 'var(--c-yellow)';
        } else if (menuText.classList.contains('references')) {
          svgElement.querySelector('path').style.fill = 'var(--c-orange)';
        } else if (menuText.classList.contains('contact')) {
          svgElement.querySelector('path').style.fill = 'var(--c-red)';
        }
      });

      menuText.addEventListener('mouseleave', () => {
        // rotateSvg(svgElement);
        svgElement.querySelector('path').style.fill = 'white';
      });
    });
  });
</script>

