<style>
  .svg-container {
    opacity: 1;
    transition:
      transform 0.5s ease,
      fill 0.5s ease;
  }

  svg path {
    fill: white;
    transition: fill 0.5s ease;
  }

  /* Hover animation */
  li.menu-item:hover ~ .svg-container {
    transform: rotate(180deg);
  }

  /* li.menu-item:hover ~ .svg-container svg path {
    fill: blue;
  } */

  header {
    @apply p-4;
  }

  .box-flag {
    display: flex;
    flex-direction: row;
    gap: 5px;
  }

  .navigation {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
  }

  .nav-content {
    position: relative;
    padding: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .menu-overlay {
  }

  .menu-container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .menu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
    gap: 2rem;
    text-align: center;
  }

  .menu-item {
    overflow: hidden;
  }

  .menu-text.experience:hover {
    color: rgb(0, 51, 204); /* Blue */
  }
  .menu-text.education:hover {
    color: rgb(0, 204, 0); /* Green */
  }
  .menu-text.skills:hover {
    color: rgb(255, 255, 0); /* Yellow */
  }
  .menu-text.references:hover {
    color: rgb(255, 102, 0); /* Orange */
  }
  .menu-text.contact:hover {
    color: rgb(204, 0, 0); /* Red */
  }

  .menu-link {
    font-size: clamp(1.5rem, 10vw, 1rem);
    text-decoration: none;
    color: var(--text);
    font-weight: 500;
    line-height: 1;
    display: block;
    opacity: 0.7;
  }
  .menu-item:hover .menu-link {
    opacity: 1;
  }

  .logo-link {
    min-width: 200px;
    height: 2rem;
    display: flex;
    align-items: center;
    color: var(--text);
    opacity: 0.7;
  }

  .logo-link:hover {
    opacity: 1;
  }

  @media (min-width: 769px) {
    .nav-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 5%;
    }
    .menu-overlay[data-astro-cid-pux6a34n] {
      position: static;
      height: auto;
      background: none;
      transform: none;
      flex: 1;
      display: flex;
      justify-content: flex-end;
      margin-left: 4rem;
    }
    .logo-link {
      height: 2.5rem;
    }
  }
</style>
